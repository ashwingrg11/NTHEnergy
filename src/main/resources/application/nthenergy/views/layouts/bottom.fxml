<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="35.0" prefWidth="1100.0" stylesheets="@../../assets/css/style.css" BorderPane.alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="application.nthenergy.controllers.DashboardController">
    <children>
        <HBox fx:id="menuLogout" onMouseClicked="#logoutMenuClicked" prefHeight="30.0" prefWidth="200.0">
            <padding>
                <Insets bottom="5.0" left="20.0" top="5.0" />
            </padding>
            <children>
                <ImageView fitHeight="16.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../assets/icons/logout-icon.png" />
                    </image>
                    <HBox.margin>
                        <Insets top="4.0" />
                    </HBox.margin>
                </ImageView>
                <Label minHeight="25.0" text="    Log me out" textFill="#3c3c3c">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </HBox>
    </children>
</AnchorPane>
